# Core environment variables - TEMPLATE FILE
# Copy this to .env and fill in your actual values
# DO NOT commit .env to version control

# Core environment variables
DATASTORE="postgres"
BEARER_TOKEN="your_bearer_token_here"
OPENAI_API_KEY="your_openai_api_key_here"
EMBEDDING_MODEL="text-embedding-3-large"

# Optional environment variables for Azure OpenAI
OPENAI_API_BASE="https://your-azure-openai-endpoint.openai.azure.com/"
OPENAI_API_TYPE="azure"
OPENAI_EMBEDDINGMODEL_DEPLOYMENTID="text-embedding-3-large"

# Additional configuration
OPENAI_API_VERSION="2023-12-01-preview"

# Custom LLM endpoints
CUSTOM_LLM_ENDPOINT="https://your-custom-llm-endpoint.com"
